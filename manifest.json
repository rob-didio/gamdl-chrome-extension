{
  "manifest_version": 3,
  "name": "gamdl - Apple Music Downloader",
  "version": "1.0.0",
  "description": "Download Apple Music tracks using gamdl",
  "permissions": [
    "activeTab",
    "nativeMessaging"
  ],
  "host_permissions": [
    "*://music.apple.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
